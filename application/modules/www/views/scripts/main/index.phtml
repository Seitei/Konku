<script type="text/javascript">
$(document).ready(function() {

	$('#logout').click(function(){
		$.post('/post/logout',{}).done(function(data){
			window.location.replace('post');
		});
		return false;
	});

	$('.cancel').click(function(){
		$('#loginDiv').hide();
		$('#showLogin').show();
		$('#loginDiv .editable').val('');
		$('.errorMsg').hide();
		$('#createAccount').show();
		$('#register').hide();
		$('#register .editable').val('');
		$('#cAcceptTerms').prop("checked", false);
		return false;
	});

	$('#createAccount').click(function(){
		$('#register').show();
		$('#loginDiv').hide();
		$('#showLogin').show();
		$('#createAccount').hide();
		$('#loginDiv .editable').val('');
		$('.errorMsg').hide();
		return false;
	});
	
	$('#showLogin').click(function(){
		$('#loginDiv').show();
		$('#showLogin').hide();
		$('#createAccount').show();
		$('#register').hide();
		$('#register .editable').val('');
		$('#cAcceptTerms').prop("checked", false);
		$('.errorMsg').hide();
		return false;
	});

	$('#login').click(function(){
		$('.errorMsg').hide();
		var username = $('#username').val();
		var password = $('#password').val();
		if(!username){
			$('#usernameError').show();
			$('#usernameError').html("Enter a valid username");
		}
		if(!password){
			$('#passwordError').show();
			$('#passwordError').html("Enter a valid password");
		}
		if($('.errorMsg:visible').length == 0){
			$('#login').attr('disabled','disabled');
			$.post('/post/login',{username: username, password: password }).done(function(data){
				if(data){
					$('#loginError').show();
					$('#loginError').html(data);
					$('#login').removeAttr('disabled');
				} else {
					window.location.replace('post');
				}
			});
		}
		return false;
	});
	
	$('#cRegister').click(function(){
		$('.errorMsg').hide();
		var username = $('#cUsername').val();
		var email = $('#cEmail').val();
		var password = $('#cPassword').val();
		var password2 = $('#cPassword2').val();
		var acceptTerms = $('#cAcceptTerms').prop('checked');
		if(!username){
			$('#cUsernameError').show();
			$('#cUsernameError').html("Enter a valid username");
		}
		if(!email){
			$('#cEmailError').show();
			$('#cEmailError').html("Enter a valid email");
		}
		if(!password){
			$('#cPasswordError').show();
			$('#cPasswordError').html("Enter a valid password");
		}
		if(password != password2){
			$('#cPassword2Error').show();
			$('#cPassword2Error').html("Passwords don't match");
		}
		if(!acceptTerms){
			$('#cAcceptTermsError').show();
			$('#cAcceptTermsError').html("You must accept the terms");
		}
		if($('.errorMsg:visible').length == 0){
			$('#cRegister').attr('disabled','disabled');
			$.post('/post/register',{username: username, email: email, password: password, password2: password2, acceptTerms: acceptTerms }).done(function(data){
				if(data){
					$('#cRegisterError').show();
					$('#cRegisterError').html(data);
				} else {
					$('#register').hide();
					$('#loginDiv').show();
					$('#register .editable').val('');
					$('#cAcceptTerms').prop("checked", false);
				}
				$('#cRegister').removeAttr('disabled');
			});
		}
		return false;
	});

	$('#gotoGameList').click(function(){
		$("#gameList").show();

		if(!$("#gameView").hasClass("moved")){
			$("#gameView").toggleClass("moved");
		}
	});


	

});

</script>
